[Unit]
Description=Morning Report for Knowledge System
After=network.target

[Service]
Type=oneshot
User=root
WorkingDirectory=/root/.openclaw/workspace/knowledge-system
EnvironmentFile=/etc/systemd/system/evolution-bot.env
ExecStart=/root/.openclaw/workspace/knowledge-system/scripts/morning-report.sh
StandardOutput=append:/var/log/knowledge/morning-report.log
StandardError=append:/var/log/knowledge/morning-report.log

[Install]
WantedBy=multi-user.target
